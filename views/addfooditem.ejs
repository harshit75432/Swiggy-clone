<body>
    <div class="container" >
         
            <div class="d-flex justify-content-center align-items-center">
                <div class="d-flex flex-column p-5" style="width: 600px; box-shadow: 5px 7px rgb(164, 164, 164,0.2);">
                    <h4 class="mb-4 text-center"  style="color: rgb(13, 12, 12,0.5); font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif">Add food item</h4>
                    <form id="food-item-form" method="post">
                        <div class="d-flex justify-content-center align-items-center mt-4" style=" width: 0%; position: relative; margin-left: 50%;">
                            <img id="food-pic"  class="p-2" src="/images/food.jpg" width="150px" height="150px" alt="" style="border: 1px solid lightgray; border-radius: 50%; object-fit: fill;">

                            <div id="upload-photo" class="d-flex align-items-center justify-content-center" style="position: absolute; bottom: 12px; left: 40px; background-color: rgb(211, 211, 211,0.5); border-radius: 50%; padding: 6px; cursor: pointer;">
                                <i class="bi bi-camera-fill fs-5" style="color: gray;"></i>
                            </div>
                        </div>
                       
                        <input id="file" type="file" style="display: none;">
                        <input id="food-name" class="form-control mt-4" placeholder="Food name" type="text" required>
                        <select id="type-select" class="form-select mt-3" required>
                            <option value="" selected disabled>Please select food type</option>
                            <option>Veg</option>
                            <option>Non veg</option>
                           
                          </select>
                      
                        <div class="d-flex justify-content-between mt-4">
                            <div>
                                <span style="font-size: 20px;">Price</span>
                            </div>
                            <div>
                                <i id="price-add-btn" class="bi bi-plus-lg fs-4" style="color: green; cursor: pointer;"></i> 
                            </div>
                        </div>
                        <div id="price-section">
                            <div id="price-div-<%= 0 %>" class="mt-3 price-div">
                                <div class="d-flex align-items-center mt-3 w-100">
                                        <div class="d-flex flex-column w-100">
                                            <input id="price-title-0" class="form-control price-title" type="text" placeholder="Title" required>
                                            <input id="price-0" class="form-control mt-3 price" type="number" placeholder="Price" required>
                                        </div>
                                        <div class="mx-2">
                                            <i id="price-delete-btn-0" class="bi bi-trash3 text-danger delete-price fs-5" style="cursor: pointer;"></i>
                                        </div>

                                </div>
                     
                            </div>
                            
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <div>
                                <span style="font-size: 20px;">Add ons</span>
                            </div>
                            <div>
                                <i id="add-ons-btn" class="bi bi-plus-lg fs-4" style="color: green; cursor: pointer;"></i> 
                            </div>
                        </div>
                        <div id="add-ons-section">
